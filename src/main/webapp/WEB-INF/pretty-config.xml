<pretty-config xmlns="http://ocpsoft.org/schema/rewrite-config-prettyfaces" 
               xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
               xsi:schemaLocation="http://ocpsoft.org/schema/rewrite-config-prettyfaces
                      http://ocpsoft.org/xml/ns/prettyfaces/rewrite-config-prettyfaces.xsd">

    <url-mapping>
        <pattern value="/index/" />
        <view-id value="/faces/pages/index.xhtml" />
    </url-mapping>
    <url-mapping>
        <pattern value="/people/Info#{/[0-9]+/ id}" />
        <view-id value="/faces/pages/people/info.xhtml" />
    </url-mapping>
    <url-mapping>
        <pattern value="/people/personMovies#{/[0-9]+/ id}" />
        <view-id value="/faces/pages/people/moviesList.xhtml" />
    </url-mapping>

</pretty-config>